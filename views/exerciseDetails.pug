doctype html
html(lang="en")
    head
        include head
        title Fitness Buddy | Exercise Details
    body
        include navbar
        #container-margin-nav.container-mg
            button#favourites-button(onclick="document.location='/exercises'") Favourites
            button#search-button(onclick="document.location='/search'") Search
            h2.page-title= name
            br
            img.logo-image(src= image alt="fitness-buddy-logo")
            br
            br
            | !{description}
            br
            - videoLink = video
                unless videoLink == null
                    iframe(width="90%" height="315" src= videoLink frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
            br
            - const favouriteBool = favourite
                if favouriteBool === true
                    button#add-to-favourites.favourites-button(style="display: none;" data-id= exerciseId) Add to favourites
                    button#remove-from-favourites.favourites-button(data-id= exerciseId) Remove from favourites
                else
                    button#add-to-favourites.favourites-button(data-id= exerciseId) Add to favourites
                    button#remove-from-favourites.favourites-button(style="display: none;" data-id= exerciseId) Remove from favourites
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
        script(type="text/javascript" src="/js/exerciseDetails.js")
    include footer